@using System.Security.Principal
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospRec</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css?version=1.0.1" />
</head>
<body>
    <header>
        <div></div>
            <nav class="navbar">
                <!--<h1>Home</h1>-->
                <div class="navbar">
                    <img src="~/images/Logo.png" width="130" height="150" alt="Logo Image">
                    <nav>
                        <ul>
                            <li><a href="/index">Home</a></li>
                            <li><a href="/search">Search Patients</a></li>
                            <li><a href="/createPatient">Add Patient</a></li>
                            <li><a href="/createPatientRecord">Add Patient Record</a></li>

                            @if (User.Identity.IsAuthenticated)
                            {
                                //cut user identity name to username
                                string username = User.Identity.Name;
                                int i = username.IndexOf("@");
                                if (i > 0)
                                {
                                    username = username.Substring(0, i);
                                }
                                //signout and name
                                <li class="nav-item"><a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a></li>
                                <li class="nav-item nav-name">
                                    Hello @username!
                                </li>
                            }
                            else
                            {
                                <li class="login"><a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Login</a></li>
                            }
                        </ul>
                    </nav>
                </div>
            </nav>
    </header>
    <div class="container">
        <main class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - HospRec - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
