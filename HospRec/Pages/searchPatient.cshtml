@page "/search"
@model HospRec.Pages.searchPatientModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Hospital Project" />
    <meta name="Keywords" content="JS, CSS, HTML" />
    <meta name="author" content="Group 8" />
    <title>Search Patient</title>
    <link href="style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div>
            <form method="post">
                <p>
                    Search by:
                    <label>First Name</label>
                    <input type="text" name="firstName" id="firstName" size="15" required="" />
                    <label>Last Name</label>
                    <input type="text" name="lastName" id="lastName" size="15" required="required" />
                    <input type="submit" value="Search" />
                    <input type="reset" value="Reset Form" id="reset" />
                </p>
            </form>
            <div>
                <div class="grid_container_parent">
                    @foreach (var p in Model.Patients)
                     {
                        <div class="grid_container_child">
                            <div class="grid_item01">@p.PatientID</div>
                            <div grid_item01="grid_item02">@p.FirstName</div>
                            <div grid_item01="grid_item03">@p.LastName</div>
                        </div>
                     }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
