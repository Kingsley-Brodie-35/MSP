@page
@model HospRec.Pages.LoginModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Hospital Project" />
    <meta name="Keywords" content="JS, CSS, HTML" />
    <meta name="author" content="Group 8" />
    <title>Login</title>
    <link href="style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Login.UserName">Username</label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="Login.UserName" />
                </div>
                <span class="text-danger" asp-validation-for="Login.UserName"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Login.Password"></label>
                </div>
                <div class="col-5">
                    <input type="password" asp-for="Login.Password" />
                </div>
                <span class="text-danger" asp-validation-for="Login.Password"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <input type="submit" class="btn btn-primary" value="Sign In" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>